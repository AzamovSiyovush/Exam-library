@page "/authors/index"
@model Razor.Pages.Author.Index

<h2 class="mb-3 text-2xl font-semibold text-gray-800">Authors</h2>

@if (Model.AuthorGetDto?.Data != null && Model.AuthorGetDto.Data.Any())
{
    <table class="min-w-full border border-gray-300 rounded-lg">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left">Name</th>
                <th class="px-4 py-2 text-left">Birth Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model.AuthorGetDto.Data)
            {
                <tr class="border-t hover:bg-gray-50">
                    <td class="px-4 py-2">@author.Name</td>
                    <td class="px-4 py-2">@author.BirthDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-gray-600 italic">No authors found.</p>
}
